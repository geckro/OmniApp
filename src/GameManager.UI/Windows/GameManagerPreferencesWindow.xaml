<Window x:Class="GameManager.UI.Windows.GameManagerPreferencesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="GameManagerPreferencesWindow" Height="450" Width="800">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <StackPanel Grid.Row="0">
      <Label Content="Table preferences" FontWeight="Bold" />
      <StackPanel Orientation="Horizontal">
        <Label Content="Font family:" VerticalAlignment="Center" />
        <TextBox x:Name="TableFontFamilyOption" MinWidth="150" />
      </StackPanel>
      <StackPanel Orientation="Horizontal">
        <Label Content="Visible table columns:" VerticalAlignment="Center" />
        <StackPanel Orientation="Horizontal" x:Name="CheckBoxTableColumnsStackPanel">
          <!-- CheckBoxes are programatically added -->
        </StackPanel>
      </StackPanel>
    </StackPanel>
  </Grid>
</Window>
