<Window x:Class="GameManager.UI.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Game Manager" Height="450" Width="800">
    <StackPanel Margin="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button Content="Add..." Click="AddButton_Click" Grid.Column="0" />
            <Menu Grid.Column="1">
                <MenuItem x:Name="GenreFilter" Header="Genre" />
                <MenuItem x:Name="PlatformFilter" Header="Platform" />
            </Menu>

            <Label Content="Search" Grid.Column="2" />
            <TextBox MinWidth="150" Grid.Column="3" />
        </Grid>

        <StackPanel>
            <DataGrid MinHeight="40" x:Name="GameDataGrid" />
        </StackPanel>
    </StackPanel>
</Window>